@inherits LayoutComponentBase

<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="3"
                IconType="IconType.FontAwesome"
                SuccessClass="success-toast-override"
                SuccessIcon="fa fa-thumbs-up"
                WarningClass="warning-toast-override"
                WarningIcon="fa fa-exclamation-triangle"
                ErrorClass="error-toast-override"
                ErrorIcon="fa fa-times-circle" />

<PageTitle>My Lotto Rewards</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <MyLotoRewards.Componentes.LoginBar></MyLotoRewards.Componentes.LoginBar>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>